<Page x:Class="UI.Screens.Item"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI.Screens"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Item"
      Background="#FF2C3E50">

    <Grid Background="#FF2C3E50">


        <TextBlock Text="Item Details" 
                       FontSize="50" 
                       Foreground="#F4C095"
                       Margin="0,30,0,0"
                       HorizontalAlignment="Center"/>
        <!-- Conteneur principal pour centrer le contenu -->
        <Border VerticalAlignment="Center" HorizontalAlignment="Center" 
         BorderBrush="#F4C095" BorderThickness="3" CornerRadius="10" Padding="10">

            <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FF34495E" Width="400" Height="300" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Nom -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nom:" FontWeight="Bold" Foreground="#F4C095" FontSize="34" />
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}" Foreground="#F4C095" FontSize="34"/>
            
            <!-- ID -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="ID:" FontWeight="Bold" Foreground="#F4C095" FontSize="26"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ItemId}" Foreground="#F4C095" FontSize="26"/>

            <!-- Prix -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Prix:" FontWeight="Bold" Foreground="#F4C095" FontSize="26"/>
            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Price}" Foreground="#F4C095" FontSize="26"/>

            <!-- Description -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Description:" FontWeight="Bold" Foreground="#F4C095" VerticalAlignment="Top " FontSize="22"/>
            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Description}" Foreground="#F4C095" TextWrapping="Wrap" FontSize="22"/>
        </Grid>
        </Border>
    </Grid>
</Page> 