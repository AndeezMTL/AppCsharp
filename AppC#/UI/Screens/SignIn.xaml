<Page x:Class="UI.Screens.SignIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI.Screens"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Sign In"
      Background="#FF2C3E50">

    <Grid Background="#FF2C3E50">
        <StackPanel Width="300" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
            
            <TextBlock Text="Sign In" 
                       FontSize="24" 
                       Foreground="White"
                       Margin="0,0,0,30"
                       HorizontalAlignment="Center"/>

            <!-- Email -->
            <TextBlock Text="Email" 
                       Foreground="White"
                       Margin="0,0,0,5"
                       HorizontalAlignment="Center"/>
            <TextBox x:Name="inputEmail"
                     Height="40"
                     Width="200"
                     Padding="10,0,10,0"
                     Background="#FF34495E"
                     Foreground="White"
                     HorizontalAlignment="Center"
                     VerticalContentAlignment="Center"/>

            <!-- Password   -->
            <TextBlock Text="Password" 
                       Foreground="White"
                       Margin="0,20,0,5"
                       HorizontalAlignment="Center"/>
            <PasswordBox x:Name="inputPassword"
                         Height="40"
                         Width="200"
                         Padding="10,0,10,0"
                         Background="#FF34495E"
                         Foreground="White"
                         HorizontalAlignment="Center"
                         VerticalContentAlignment="Center"/>

            <!-- Sign In boutton -->
            <Button x:Name="btnSignIn"
                    Content="Sign In"
                    Height="40"
                    Width="200"
                    Margin="0,30,0,0"
                    Background="#FF3498DB"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    Cursor="Hand"/>

            <!-- Sign Up boutton -->
            <Button x:Name="btnNavigateSignUpFromSignIn"
                    Content="Sign Up"
                    Height="40"
                    Width="200"
                    Margin="0,30,0,0"
                    Background="#FF3498DB"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    Cursor="Hand"
                    Click="NavigateToSignUp"/>
            

        </StackPanel>
    </Grid>
</Page> 