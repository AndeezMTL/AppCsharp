<Page x:Class="UI.Screens.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI.Screens"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Sign Up"
      Background="#FF2C3E50">

    <Grid Background="#FF2C3E50">
        <StackPanel Width="300" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center">

            <TextBlock Text="Sign Up" 
               FontSize="24" 
               Foreground="White"
               Margin="0,0,0,30"
               HorizontalAlignment="Center"/>

            <!-- FirstName  -->
            <TextBlock Text="First Name" 
               Foreground="White"
               Margin="0,0,0,5"
               HorizontalAlignment="Center"/>
            <TextBox x:Name="inputFirstName"
             Height="40"
             Width="200"
             Padding="10,0,10,0"
             Background="#FF34495E"
             Foreground="White"
             HorizontalAlignment="Center"
             VerticalContentAlignment="Center"/>

            <!-- LastName   -->
            <TextBlock Text="Last Name" 
               Foreground="White"
               Margin="0,20,0,5"
               HorizontalAlignment="Center"/>
            <TextBox x:Name="inputLastName"
             Height="40"
             Width="200"
             Padding="10,0,10,0"
             Background="#FF34495E"
             Foreground="White"
             HorizontalAlignment="Center"
             VerticalContentAlignment="Center"/>

            <!-- Email -->
            <TextBlock Text="Email" 
               Foreground="White"
               Margin="0,20,0,5"
               HorizontalAlignment="Center"/>
            <TextBox x:Name="inputEmail"
             Height="40"
             Width="200"
             Padding="10,0,10,0"
             Background="#FF34495E"
             Foreground="White"
             HorizontalAlignment="Center"
             VerticalContentAlignment="Center"/>

            <!-- Phone  -->
            <TextBlock Text="Phone" 
               Foreground="White"
               Margin="0,20,0,5"
               HorizontalAlignment="Center"/>
            <TextBox x:Name="inputPhone"
             Height="40"
             Width="200"
             Padding="10,0,10,0"
             Background="#FF34495E"
             Foreground="White"
             HorizontalAlignment="Center"
             VerticalContentAlignment="Center"/>
            
            <!-- Username  -->
            <TextBlock Text="Username" 
               Foreground="White"
               Margin="0,20,0,5"
               HorizontalAlignment="Center"/>
            <TextBox x:Name="inputUsername"
             Height="40"
             Width="200"
             Padding="10,0,10,0"
             Background="#FF34495E"
             Foreground="White"
             HorizontalAlignment="Center"
             VerticalContentAlignment="Center"/>

            <!-- Password   -->
            <TextBlock Text="Password" 
               Foreground="White"
               Margin="0,20,0,5"
               HorizontalAlignment="Center"/>
            <PasswordBox x:Name="inputPassword"
                 Height="40"
                 Width="200"
                 Padding="10,0,10,0"
                 Background="#FF34495E"
                 Foreground="White"
                 HorizontalAlignment="Center"
                 VerticalContentAlignment="Center"/>

            <!-- Sign Up boutton -->
            <Button x:Name="btnSignUp"
            Content="Sign Up"
            Height="40"
            Width="200"
            Margin="0,30,0,0"
            Background="#FF3498DB"
            Foreground="White"
            HorizontalAlignment="Center"
            Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>
