<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Main Window"
        WindowState="Maximized" Background="#FF1D2D44"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="93*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="#748CAB" Margin="0,0,0,728" Grid.ColumnSpan="2" Grid.RowSpan="2">

            <Button Margin="2,2,2,2" Panel.ZIndex="-2" x:Name="btnHome" Width="48" Height="52" Click="NavigateToScreen1">
                <Button.Background>
                    <ImageBrush Stretch="Uniform" ImageSource="/home_24dp_1F1F1F_FILL0_wght400_GRAD0_opsz24.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="btnScreen2" Content="" Click="NavigateToScreen2" Width="48" Height="52" Panel.ZIndex="-2" Margin="5" >
                <Button.Background>
                    <ImageBrush ImageSource="/logout_24dp_1F1F1F_FILL0_wght400_GRAD0_opsz24.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="btnScreen3" Width="48" Height="52" Panel.ZIndex="-2" Margin="5"  Click="NavigateToScreen3">
                <Button.Background>
                    <ImageBrush ImageSource="/inventory_2_24dp_1F1F1F_FILL0_wght400_GRAD0_opsz24.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="btnScreen4" Width="48" Height="52" Panel.ZIndex="-2" Margin="5" Click="NavigateToScreen4">
                <Button.Background>
                    <ImageBrush ImageSource="/calendar_month_24dp_1F1F1F_FILL0_wght400_GRAD0_opsz24.png"/>
                </Button.Background>
            </Button>
        </StackPanel>

        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2"/>
        
    </Grid>
</Window>
