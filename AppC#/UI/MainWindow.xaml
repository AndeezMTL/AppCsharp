<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Main Window"
        WindowState="Maximized" Background="#FF1D2D44" d:DesignWidth="1883.867"
        >
    <Window.Resources>
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF34495E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--  Menu  -->
        <Button x:Name="btnMenu" 
                Width="40" 
                Height="40" 
                Cursor="Hand"
                Margin="10,10,0,10" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Panel.ZIndex="1"
                Click="ToggleNavigationMenu">
            <Button.Background>
                <ImageBrush ImageSource="/menu_24dp_F4C095_FILL0_wght400_GRAD0_opsz24.png"/>
            </Button.Background>
        </Button>

        <!-- La sidebar -->
        <Border x:Name="navMenu" 
        Grid.Row="1" 
        Width="200" 
        Background="#FF1D2D44" 
        Visibility="Collapsed"
        Panel.ZIndex="2"
        HorizontalAlignment="Left">
            <StackPanel Margin="10">
                <!-- Bouton Catalogue -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Button 
                    Cursor="Hand"
                    Click="NavigateToCatalogue"
                    Style="{StaticResource NavigationButtonStyle}" Width="54" Height="54">
                        <Button.Background>
                            <ImageBrush ImageSource="/home_24dp_F4C095_FILL0_wght400_GRAD0_opsz24.png" Stretch="none"/>
                        </Button.Background>
                    </Button>
                    <TextBlock Text="Catalogue" VerticalAlignment="Center" Foreground="#F4C095" Margin="5,0,0,0" FontSize="20" />
                </StackPanel>

                <!-- Bouton Connexion -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Button
                    Cursor="Hand"                        
                    Click="NavigateToSignIn"
                    Style="{StaticResource NavigationButtonStyle}" Width="54" Height="54">
                        <Button.Background>
                            <ImageBrush ImageSource="/login_24dp_F4C095_FILL0_wght400_GRAD0_opsz24.png" Stretch="none"/>
                        </Button.Background>
                    </Button>
                    <TextBlock Text="Connexion" VerticalAlignment="Center" Foreground="#F4C095" Margin="5,0,0,0" FontSize="20"/>
                </StackPanel>

                <!-- Bouton Calendrier -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Button 
                        Cursor="Hand"
                    Click="NavigateToCalendrier"
                    Style="{StaticResource NavigationButtonStyle}" Width="54" Height="54">
                        <Button.Background>
                            <ImageBrush ImageSource="/calendar_month_24dp_F4C095_FILL0_wght400_GRAD0_opsz24.png" Stretch="none"/>
                        </Button.Background>
                    </Button>
                    <TextBlock Text="Calendrier" VerticalAlignment="Center" Foreground="#F4C095" Margin="5,0,0,0" FontSize="20"/>
                </StackPanel>

                <!-- Bouton Inventaire -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Button 
                    Cursor="Hand"
                    Click="NavigateToInventory"
                    Style="{StaticResource NavigationButtonStyle}" Width="54" Height="54">
                        <Button.Background>
                            <ImageBrush ImageSource="/inventory_2_24dp_F4C095_FILL0_wght400_GRAD0_opsz24.png" Stretch="none"/>
                        </Button.Background>
                    </Button>
                    <TextBlock Text="Inventaire" VerticalAlignment="Center" Foreground="#F4C095" Margin="5,0,0,0" FontSize="20"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Frame x:Name="MainFrame" 
               Grid.Row="1" 
               NavigationUIVisibility="Hidden" 
               Grid.ColumnSpan="2" 
               Navigated="MainFrame_Navigated"/>
        
    </Grid>
</Window>
